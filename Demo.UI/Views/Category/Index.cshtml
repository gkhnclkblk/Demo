@using Demo.DTO.DTOs.CategoryDtos
@model List<CategoryListDto>

@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a class="btn btn-primary" asp-action="Create" asp-controller="Category">Yeni Kategori</a>

<table class=" table table-hover table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Id</td>
                <td>@category.Name</td>
                <td>
                    <a class="btn btn-success" asp-action="Update" asp-controller="Category" asp-route-id="@category.Id">Güncelle</a>
                    <a class="btn btn-danger" asp-action="Remove" asp-controller="Category" asp-route-id="@category.Id">Sil</a>
                </td>
            </tr>
        }

    </tbody>
</table>
